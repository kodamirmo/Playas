<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#000000">
    
      <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="136dp"
        android:src="@drawable/banner_tours2" />
     
      <Button
          android:id="@+id/btnExcursines"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:text="Excursiones" />
     
   <Button
          android:id="@+id/btnAventura"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:text="Aventura" />
   
   <Button
          android:id="@+id/btnEcologico"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:text="Ecologico" />
    
     
    <Button
          android:id="@+id/btnArqueologicos"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:text="Arqueologicos" />
    
    

</LinearLayout>
